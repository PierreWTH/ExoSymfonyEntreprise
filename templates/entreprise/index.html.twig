{% extends 'base.html.twig' %}

{% block title %}Hello EntrepriseController!{% endblock %}

{% block body %}

    <h1> Liste des entreprises</h1>

    <a href="{{ path ('add_entreprise') }}"> Ajouter une entreprise </a><br>

    {%for entreprise  in entreprises %}

    <p><a href="{{ path ('show_entreprise' , {id : entreprise.id}) }}">{{ entreprise}}</a>
    <a href="{{ path ('edit_entreprise' , {id : entreprise.id}) }}"> Editer </a>
    <a href="{{path ('delete_entreprise', {id : entreprise.id })}}"> Supprimer </a><br></p>

    {% endfor %}
{% endblock %}
